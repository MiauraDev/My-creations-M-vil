<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pokeapi.SplashPage"
             BackgroundColor="White">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
        <Image Source="pokemonLogo.png" WidthRequest="300" HeightRequest="200"/>
        <Image Source="pokedex.png" WidthRequest="300" HeightRequest="200"/>
        <ActivityIndicator IsRunning="True" Color=" #ffcb05"/>
        <Label Text="Cargando..." HorizontalOptions="CenterAndExpand" TextColor="#2a75bb"/>
    </StackLayout>
</ContentPage>